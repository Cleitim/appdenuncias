<%- include("layout/hearder") %>


<div class="container" >
    <div class="col-md-12" style="text-align: right; margin-bottom: 10px; margin-top: 10px;">
        <a href="/adddenuncia"  class="btn btn-danger btn-lg btn-block" style="box-shadow: 10px 5px 5px rgb(111, 111, 111);"><i class="bi bi-plus-circle"></i> cadastrar nova denuncia</a>
    </div>
    
    <div class="row" >
        <div class="col-lg-12">
            <% if(typeof result != "undefined"){ 
                   if (result.length > 0){ 
                %>
            <div class="table-responsive" style="box-shadow: 10px 5px 5px rgb(111, 111, 111);">
                <table class="table table-striped text-center" style="margin-bottom: 0;">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Imagem</th>
                            <th>Endereço</th>
                            <th>Cidade</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                            <% result.forEach(dados => { %>
                            <tr>
                                <td><%= dados.id %> </td>
                                <td><img src="<%= dados.image %>" style="width: 40px; height: 40px; border-radius: 20px;" alt=""></td>
                                <td><%= dados.address %> </td>
                                <td><%= dados.city %> </td>
                                <td><%= dados.dataDenuncia.toLocaleString() %> </td>
                                <td>
                                    <a href="" class="text-warning"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                            <% }) 
                       
                         console.log(result); %>
                       
                    </tbody>
                </table>
            </div>

            <%    }else{ %>
            <div class="col-md-12" style="text-align: center;" >
                <h1>Nenhuma Denuncia feita.</h1>
            </div>
            <% }    
            } %>
        </div>
    </div>
</div>

<%- include("layout/footer") %>